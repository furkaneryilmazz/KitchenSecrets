@model Product

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-controller="Product" asp-action="Edit" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All"></div>
    <input type="hidden" asp-for="ProductId"/>
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" type="text" class="form-control" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" type="text" class="form-control" />
        <span asp-validation-for="Title"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Material" class="form-label"></label>
        <input asp-for="Material" type="text" class="form-control" />
        <span asp-validation-for="Material"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <input asp-for="Description" type="text" class="form-control" />
        <span asp-validation-for="Description"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ShortDescription" class="form-label"></label>
        <input asp-for="ShortDescription" type="text" class="form-control" />
        <span asp-validation-for="ShortDescription"></span>
    </div>
    <div class="input-group mb-3">
        <input type="file" name="imageFile" id="imageFile" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="CategoryId" class="form-label"></label>
        <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.Categories">
            <option value="0">Hepsi</option>
        </select>
        <span asp-validation-for="CategoryId"></span>
    </div>
    <div class="mb-3">
        <input type="checkbox" asp-for="DealOfTheDay" class="form-check-input" />
        <label asp-for="DealOfTheDay" class="form-check-label"></label>
        <span asp-validation-for="DealOfTheDay"></span>
    </div>
    <div class="mb-3">
        <input type="checkbox" asp-for="TrendFood" class="form-check-input" />
        <label asp-for="TrendFood" class="form-check-label"></label>
        <span asp-validation-for="TrendFood"></span>
    </div>
    <button type="submit" class="btn btn-secondary">Kaydet</button>
</form>
