@model Product

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .recipe-img {
            width: 100%;
            height: auto;
            border-radius: 10px;
        }

        .recipe-title {
            font-family: 'Poppins', sans-serif;
            font-weight: 700;
            font-size: 2.5rem;
            color: #333;
        }

        .badge-custom {
            font-size: 1.2rem;
            padding: 0.5em 1em;
            border-radius: 10px;
        }

        .description {
            font-size: 1.1rem;
            line-height: 1.6;
            color: #555;
        }

        .card-custom {
            border: none;
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
        }

            .card-custom:hover {
                transform: translateY(-10px);
            }

        .comments-section .comment {
            border-bottom: 1px solid #ddd;
            padding-bottom: 10px;
            margin-bottom: 10px;
        }

        .comments-section h4 {
            margin-top: 20px;
            color: #444;
        }

        .btn-primary-custom {
            background-color: #007bff;
            border-color: #007bff;
            transition: background-color 0.3s ease;
        }

            .btn-primary-custom:hover {
                background-color: #0056b3;
            }
    </style>
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <img src="~/img/@Model.Image" alt="Yemek Resmi" class="recipe-img">
        </div>
        <div class="col-md-6 d-flex flex-column align-items-center justify-content-center text-center">
            <h1 class="recipe-title">@Model.Name</h1>
            <p class="text-muted">Kategori: <span class="badge bg-warning text-dark badge-custom">@Model.Category.CategoryName</span></p>
            <p class="mt-4 lead description">@Model.ShortDescription</p>
        </div>
    </div>
    <h2 class="mt-3 bg-secondary text-white p-2 d-inline-block">@Model.Name <strong>Tarifi Nasıl Yapılır?</strong></h2>
    <div class="row mt-3">
        <div class="col-md-6 mb-4">
            <div class="card card-custom">
                <div class="card-body">
                    <h2 class="card-title">Malzemeler</h2>
                    <p class="card-text description">@Model.Material</p>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card card-custom">
                <div class="card-body">
                    <h2 class="card-title">Hazırlanış</h2>
                    <p class="card-text description">@Model.Description</p>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-5">
        <div class="col-12">
            <h2>@Model.Comments.Count() adet yorum var.</h2>
            <div class="mb-4">
                <h4>Yorum Yap</h4>
                <form>
                    <div class="mb-3">
                        <label for="name" class="form-label">İsim</label>
                        <input type="text" id="name" class="form-control form-control-lg">
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">E-posta</label>
                        <input type="email" id="email" class="form-control form-control-lg">
                    </div>
                    <div class="mb-3">
                        <label for="comment" class="form-label">Yorum</label>
                        <textarea id="comment" class="form-control form-control-lg" rows="4"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg btn-primary-custom">Gönder</button>
                </form>
            </div>
            <div class="comments-section">
                <h4>Yorumlar</h4>
                @foreach (var comment in Model.Comments)
                {
                    <div class="comment">
                        <p><strong>@comment.Text:</strong> @comment.Text</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script src="https://maxcdn.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
