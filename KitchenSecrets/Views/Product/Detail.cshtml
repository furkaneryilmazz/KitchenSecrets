@model Product

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/site.css" />
}

<div class="container mt-5 my-container">
    <div class="row">
        <div class="col-md-6">
            <img src="~/img/@Model.Image" alt="Yemek Resmi" class="recipe-img">
        </div>
        <div class="col-md-6 d-flex flex-column align-items-center justify-content-center text-center">
            <h1 class="recipe-title">@Model.Name</h1>
            <p class="text-muted">Kategori: <span class="badge bg-warning text-dark badge-custom">@Model.Category.CategoryName</span></p>
            <p class="mt-4 lead description">@Model.ShortDescription</p>
        </div>
    </div>
    <h2 class="mt-3 bg-secondary text-white p-2 d-inline-block header-title no-underline">@Model.Name <strong>Tarifi Nasıl Yapılır?</strong></h2>
    <div class="row mt-3">
        <div class="col-md-6 mb-4">
            <div class="card card-custom">
                <div class="card-body">
                    <h2 class="card-title">Malzemeler</h2>
                    <p class="card-text description">@Model.Material</p>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card card-custom">
                <div class="card-body">
                    <h2 class="card-title">Hazırlanış</h2>
                    <p class="card-text description">@Model.Description</p>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-5">
        <div class="col-12">
            <h2>@Model.Comments.Count() adet yorum var.</h2>
            <div class="mb-4">
                <h4>Yorum Yap</h4>
                <form>
                    <div class="mb-3">
                        <label for="name" class="form-label">İsim</label>
                        <input type="text" id="name" class="form-control form-control-lg">
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">E-posta</label>
                        <input type="email" id="email" class="form-control form-control-lg">
                    </div>
                    <div class="mb-3">
                        <label for="comment" class="form-label">Yorum</label>
                        <textarea id="comment" class="form-control form-control-lg" rows="4"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg btn-primary-custom">Gönder</button>
                </form>
            </div>
            <div class="comments-section">
                <h4>Yorumlar</h4>
                @foreach (var comment in Model.Comments)
                {
                    <div class="comment">
                        <p><strong>@comment.Text:</strong> @comment.Text</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script src="~/js/site.js"></script>