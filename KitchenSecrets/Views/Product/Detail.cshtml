@model Product

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .recipe-img {
            width: 100%;
            height: auto;
        }
    </style>
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <img src="~/img/@Model.Image" alt="Yemek Resmi" class="recipe-img">
        </div>
        <div class="col-md-6 d-flex flex-column align-items-center text-center">
            <h1>@Model.Name</h1>
            @* <span class="badge text-bg-warning">Kategori: @Model.Category.CategoryName</span> *@
            <p class="text-muted">Kategori: <span class="badge bg-warning text-dark">@Model.Category.CategoryName</span></p>
            @* <h3>Zorluk Seviyesi: Orta</h3> *@
            <p class="mt-4">@Model.ShortDescription</p>
        </div>
    </div>
    <h2 class="mt-3 bg-secondary p-2 d-inline-block">@Model.Name <strong>Tarifi Nasıl Yapılır?</strong></h2>
    <div class="row mt-3">
        <div class="col-md-6">
            <h2>Malzemeler</h2>
            <p>
                @Model.Material
            </p>
        </div>
        <div class="col-md-6">
            <h2>Hazırlanış</h2>
            <p>
                @Model.Description
            </p>
        </div>
    </div>
    <div class="row mt-5">
        <div class="col-12">
            <h2>Yorumlar</h2>
            <div class="mb-4">
                <h4>Yorum Yap</h4>
                <form>
                    <div class="mb-3">
                        <label for="name" class="form-label">İsim</label>
                        <input type="text" id="name" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">E-posta</label>
                        <input type="email" id="email" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label for="comment" class="form-label">Yorum</label>
                        <textarea id="comment" class="form-control" rows="4"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Gönder</button>
                </form>
            </div>
            <div class="comments-section">
                <h4>Yorumlar</h4>
                <div class="comment">
                    <p><strong>Ali:</strong> Bu tarifi denedim ve çok beğendim!</p>
                </div>
                <div class="comment">
                    <p><strong>Ayşe:</strong> Harika bir tarif, teşekkürler!</p>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://maxcdn.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
