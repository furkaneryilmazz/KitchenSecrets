
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KitchenSecrets</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @* <link rel="stylesheet" href="~/KitchenSecrets.styles.css" asp-append-version="true" /> *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">



    <style>
        .btn {
            padding: .55rem 1.5rem .45rem;
        }

        .search-button {
            margin-top: 0; /* Üstten boşluğu kaldır */
            padding: 0.375rem 0.75rem; /* Varsayılan padding değerlerini koru */
        }
    </style>
</head>
<body style="background-color:#f2f5f9">
    @{
        var isAdmin = HttpContextAccessor.HttpContext.Session.GetString("IsAdmin") == "True";
        var userId = HttpContextAccessor.HttpContext.Session.GetString("UserId");
        var isAuthenticated = !string.IsNullOrEmpty(userId);
    }


    <header>
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <!-- Container wrapper -->
            <div class="container-fluid">
                <!-- Navbar brand -->
                <a class="navbar-brand" href="/Default/Index/">KitchenSecrets</a>

                <!-- Toggle button -->
                <button class="navbar-toggler" type="button" data-mdb-toggle="collapse"
                data-mdb-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                    <i class="fas fa-bars text-light"></i>
                </button>

                <!-- Collapsible wrapper -->
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <!-- Left links -->
                    <ul class="navbar-nav me-auto d-flex flex-row mt-3 mt-lg-0">
                        <li class="nav-item text-center mx-2 mx-lg-1">
                            <a class="nav-link active" aria-current="page" href="/Default/Index">
                                <div>
                                    <i class="bi bi-house"></i>
                                </div>
                                Ana Sayfa
                            </a>
                        </li>
                        <li class="nav-item text-center mx-2 mx-lg-1">
                            <a class="nav-link" href="/Product/Index">
                                <div>
                                    <i class="fa-solid fa-burger"></i>
                                    @* <span class="badge rounded-pill badge-notification bg-danger"></span> *@
                                </div>
                                Yemek Tarifleri
                            </a>
                        </li>
                        @if (isAuthenticated && !isAdmin)
                        {
                            <li class="nav-item text-center mx-2 mx-lg-1">
                                <a class="nav-link" href="/Product/ProductUserIndex">
                                    <div>
                                        <i class="fa-solid fa-burger"></i>
                                        @* <span class="badge rounded-pill badge-notification bg-danger"></span> *@
                                    </div>
                                    Yemeklerim
                                </a>
                            </li>
                        }
                        <li class="nav-item text-center mx-2 mx-lg-1">
                            <a class="nav-link" href="#dealOfTheDay">
                                <div>
                                    <i class="fa-solid fa-calendar-week"></i>
                                    @* <span class="badge rounded-pill badge-notification bg-danger"></span> *@
                                </div>
                                Günün Yemekleri
                            </a>
                        </li>
                        <li class="nav-item text-center mx-2 mx-lg-1">
                            <a class="nav-link" href="#trendFood">
                                <div>
                                    <i class="fa-solid fa-star"></i>
                                    @* <span class="badge rounded-pill badge-notification bg-warning"></span> *@
                                </div>
                                Trend Yemekler
                            </a>
                        </li>
                        @if (isAdmin || !string.IsNullOrEmpty(userId))
                        {
                            <li class="nav-item text-center mx-2 mx-lg-1">
                                <a class="nav-link" aria-disabled="true" href="/Product/Create">
                                    <div>
                                        <i class="fa-solid fa-utensils"></i>
                                        @* <span class="badge rounded-pill badge-notification bg-warning"></span> *@
                                    </div>
                                    Tarif Ekle
                                </a>
                            </li>
                        }

                    </ul>
                    <!-- Left links -->
                    <!-- Right links -->
                    @if (string.IsNullOrEmpty(userId))
                    {
                        <ul class="navbar-nav ms-auto d-flex flex-row mt-3 mt-lg-0">
                            <li class="nav-item text-center mx-2 mx-lg-1">
                                <a class="nav-link" aria-disabled="true" href="/Login/Register">
                                    <div>
                                        <i class="fa-solid fa-registered"></i>
                                        @* <span class="badge rounded-pill badge-notification bg-warning"></span> *@
                                    </div>
                                    Kayıt Ol
                                </a>
                            </li>
                            <li class="nav-item text-center mx-2 mx-lg-1">
                                <a class="nav-link" aria-disabled="true" href="/Login/Login">
                                    <div>
                                        <i class="fa-solid fa-right-to-bracket"></i>
                                        @* <span class="badge rounded-pill badge-notification bg-warning"></span> *@
                                    </div>
                                    Giriş Yap
                                </a>
                            </li>
                        </ul>
                    }
                    @if (isAdmin || !string.IsNullOrEmpty(userId))
                    {
                        <ul class="navbar-nav ms-auto d-flex flex-row mt-3 mt-lg-0">
                            <li class="nav-item text-center mx-2 mx-lg-1">
                                <a class="nav-link" aria-disabled="true" href="/Login/Logout">
                                    <div>
                                        <i class="fa-solid fa-circle-xmark"></i>
                                        @* <span class="badge rounded-pill badge-notification bg-warning"></span> *@
                                    </div>
                                    Çıkış Yap
                                </a>
                            </li>
                        </ul>
                    }
                    <!-- Right links -->
                    <!-- Search form -->
                    <form method="get" asp-controller="Product" asp-action="Index" class="d-flex align-items-center w-auto ms-lg-3 my-3 my-lg-0">
                        <input type="search" name="searchString" value="@ViewBag.SearchString" class="form-control" placeholder="Search" aria-label="Search" style="width: 300px;" />
                        <button class="btn btn-primary search-button" type="submit" data-mdb-ripple-color="dark">
                            Ara
                        </button>
                    </form>
                </div>
                <!-- Collapsible wrapper -->
            </div>
            <!-- Container wrapper -->
        </nav>
        <!-- Navbar -->
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @* <footer class="border-top footer text-muted">
    <div class="container">
    &copy; 2024 - KitchenSecrets - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
    </footer> *@
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>


</html>
