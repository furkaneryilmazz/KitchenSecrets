@model List<Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Title</th>
            <th>Content</th>
            <th>Author</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var article in Model)
        {
            <tr>
                <td>@article.Title</td>
                <td>@article.Description</td>
                <td>@article.User.UserName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@article.ProductId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@article.ProductId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

